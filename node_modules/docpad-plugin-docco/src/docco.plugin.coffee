module.exports = (BasePlugin) ->
    class DoccoPlugin extends BasePlugin
        name: 'docco'
        config: {}
        constructor: ->
            super
            @docco = require('docco')

        render: (opts) ->
            {inExtension, outExtension, file} = opts

            if inExtension in ['litcoffee'] and outExtension in ['html', null]
                opts.content = @docco.





